@model projetoXYZ.Models.Employee

@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Employee", FormMethod.Post))
{
    @Html.HiddenFor(model => model.EmployeeID);
 
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class="control-label"})
        @Html.EditorFor(model => model.Name, new { htmlAttibutes = new {@class="form-control"}})
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Position, new { @class = "control-label" })
        @Html.EditorFor(model => model.Position, new { htmlAttibutes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Office, new { @class="control-label"})
        @Html.EditorFor(model => model.Office, new { htmlAttibutes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Age, new { @class = "control-label" })
        @Html.EditorFor(model => model.Age, new { htmlAttibutes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Salary, new { @class = "control-label" })
        @Html.EditorFor(model => model.Salary, new { htmlAttibutes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" />
    </div>
}